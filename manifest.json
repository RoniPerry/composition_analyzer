{
  "manifest_version": 3,
  "name": "Fabric Composition Analyzer",
  "version": "1.0.0",
  "description": "Analyzes fabric composition on fashion websites",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["fabric-analysis-widget.css"],
      "js": [
        "css-selector-generator-bundle.js",
        "parsers/utils/materials.js",
        "parsers/utils/normalizer.js",
        "parsers/unifiedParser.js",
        "parsers/zaraParser.js",
        "siteConfig.js",
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["fabric-analysis-widget.css"],
    "matches": ["<all_urls>"]
  }],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
} 